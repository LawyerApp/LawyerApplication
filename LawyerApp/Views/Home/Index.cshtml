@model IndexViewModel
@inject IStringLocalizer<SharedResource> resource;

<main class="index-main">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{ 
                bool check = true;
            }
           @foreach (Slider item in Model.Sliders)
           {
               if (check)
               {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Uploads/@item.Img" alt="slide">
                </div>
                   check = false;
               }
               else
               {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Uploads/@item.Img" alt="slide">
                </div>
               }
           }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="main-section">
        <section class=" main-team">
            <hr>
            <h2>@resource["Our_Team"]</h2>
            <p>
                @Model.TeamService?.TeamDescription
            </p>
            <a asp-action="team" class="btn btn-default">@resource["More"]</a>
        </section>
        <section class=" main-team">
            <hr>
            <h2>@resource["Services"]</h2>
            <p>
                @Model.TeamService?.ServicesDescription
            </p>
            <a asp-action="practice" class="btn btn-default">@resource["More"]</a>
        </section>
        <section class=" specific">
            <div class="main-contact">
                <h4>
                    @resource["Contact_Us"]
                </h4>
                <p>@resource["For_A_Free_Consultation"]</p>
                <a asp-action="services" class="btn btn-default">@resource["Schedule_Consultation"]</a>
                <h4>@Model.Contact?.ContactNumber</h4>
                <span>
                    @Model.Contact?.ContactAdress
                </span>
                <label>
                    @resource["Email"]
                </label>
                <span>@Model.Contact?.ContactEmail</span>
                <div class="clipPath"></div>
            </div>
            <div class="main-areas">
                <hr>
                <h3>@resource["Areas_of_Practice"]</h3>
                <ul>
                    @foreach (var item in Model.Areas)
                    {
                        <li><a asp-action="service" asp-route-id="@item.Id">@item.Name</a></li>
                    }
                </ul>
            </div>
        </section>
    </div>

</main>
