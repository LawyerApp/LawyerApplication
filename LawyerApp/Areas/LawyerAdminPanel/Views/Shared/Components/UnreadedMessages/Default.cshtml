@model IEnumerable<Message>

@{ 
    int count = Model.Count();
}


<li>
   @if (count != 0)
   {

    <a href="#" class="dropdown-toggle notification-icon" data-toggle="dropdown">
        <i class="fa fa-tasks"></i>
        <span class="badge">@count</span>
    </a>

   }

    <div class="dropdown-menu notification-menu large">
        <div class="notification-title">
            <span class="float-right badge badge-default">@count</span>
            Messages
        </div>

        <div class="content">
            <ul>
               @foreach (Message item in Model)
               {
                <li>
                    <p class="clearfix mb-1">
                        <span class="message float-left"><a asp-action="details" asp-controller="message" asp-route-id="@item.Id">@item.Name <br /> @item.Email</a></span>
                    </p>
                    <div class="progress progress-xs light">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
                    </div>
                </li>
               }
            </ul>
        </div>
    </div>
</li>