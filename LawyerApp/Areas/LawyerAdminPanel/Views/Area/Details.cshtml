@model AreaDetailModel

<header class="page-header">
    <h2>Area Details</h2>

    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <a asp-action="index" asp-controller="team">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Area</span></li>
            <li><span>Details</span></li>
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
    </div>
</header>

<!-- start: page -->

<div class="row">
    <div class="col-lg-4 col-xl-3 mb-4 mb-xl-0">

        @{
            AreaDto area = Model.Areas.SingleOrDefault(m => m.LanguageId == (Model.Languages.SingleOrDefault(n => n.LangShort == "en-US").Id));
        }
        <section class="card">
            <div class="card-body">
                <div class="widget-toggle-expand mb-3">
                    <div class="widget-header">
                        <h5 class="mb-2">Area Details</h5>
                        <div class="widget-toggle">+</div>
                    </div>
                    <div class="widget-content-collapsed">
                        <div class="progress progress-xs light">
                            <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            </div>
                        </div>
                    </div>
                    <div class="widget-content-expanded">
                        <ul class="simple-todo-list mt-3">
                            <li class="completed">Area name for current languages</li>
                            <li class="completed">Area description for current languages</li>
                            <li class="completed">Area meeting minute</li>
                        </ul>
                    </div>
                </div>
                <hr class="dotted short">
                <div>
                    <a asp-action="index" asp-controller="area" class="btn btn-primary" title="Back To List"><i class="fa fa-arrow-left"></i></a>
                    <a asp-action="edit" asp-controller="area" asp-route-id="@area.Id" class="btn btn-warning" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                </div>

            </div>
        </section>
    </div>
    <div class="col-lg-8 col-xl-8">

        <div class="tabs">
            <ul class="nav nav-tabs tabs-primary">
                <li class="nav-item active">
                    <a class="nav-link" href="#overview" data-toggle="tab">Overview</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="overview" class="tab-pane active">

                    <div class="p-3">

                        <h4 class="mb-3 pt-4">Area Details</h4>

                        <div class="timeline timeline-simple mt-3 mb-3">
                            <div class="tm-body">
                                <div class="tm-title">
                                    <h5 class="m-0 pt-2 pb-2 text-uppercase">Area Name</h5>
                                </div>
                                <ol class="tm-items">
                                    <li>
                                        <div class="tm-box">
                                            <div class="row">
                                                @foreach (var item in Model.Areas)
                                                {
                                                    <div class="col-4">
                                                        @{
                                                            Language language = Model.Languages.SingleOrDefault(m => m.Id == item.LanguageId);
                                                        }
                                                        <p class="text-muted mb-0">@language.LangLong</p>
                                                        <p>
                                                            @item.Name <br /> <span class="text-primary">#@language.LangShort</span>
                                                        </p>
                                                    </div>
                                                 }
                                            </div>
                                        </div>
                                    </li>
                                </ol>
                            </div>
                        </div>
                        <div class="timeline timeline-simple mt-3 mb-3">
                            <div class="tm-body">
                                <div class="tm-title">
                                    <h5 class="m-0 pt-2 pb-2 text-uppercase">Area Description</h5>
                                </div>
                                <ol class="tm-items">
                                    @foreach (var item in Model.Areas)
                                    {
                                        <li>
                                            <div class="tm-box">
                                                @{
                                                    Language language = Model.Languages.SingleOrDefault(m => m.Id == item.LanguageId);
                                                }
                                                <p class="text-muted mb-0">@language.LangLong</p>
                                                <p>
                                                    @item.Description <br /> <span class="text-primary">#@language.LangShort</span>
                                                </p>
                                            </div>
                                        </li>
                                      }
                                </ol>
                            </div>
                        </div>
                        <div class="timeline timeline-simple mt-3 mb-3">
                            <div class="tm-body">
                                <div class="tm-title">
                                    <h5 class="m-0 pt-2 pb-2 text-uppercase">Meeting Minute</h5>
                                </div>
                                <ol class="tm-items">
                                    <li>
                                        <div class="tm-box">
                                            <p class="text-muted mb-0">@Model.MeetingMinute minute</p>
                                        </div>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: page -->
