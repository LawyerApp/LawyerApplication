@model IEnumerable<FirmDto>

@section styles{
    <link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
<header class="page-header">
    <h2>Firm</h2>

    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <a asp-action="index" asp-controller="team">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Firm</span></li>
            <li><span>Index</span></li>
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
    </div>
</header>
<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                </div>

                <h2 class="card-title">Firm</h2>

            </header>
            <div class="card-body">
                <table class="table table-bordered table-striped mb-0" id="datatable-tabletools">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Img)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (FirmDto item in Model)
                        {
                            <tr>
                                <td class="teamMembertd">@item.Title</td>
                                <td class="teamMembertd">@item.Description</td>
                                <td class="teamMembertd"><img src="~/Uploads/@item.Img" /></td>
                                <td class="teamMembertd">
                                    <a asp-action="edit" title="Edit" asp-controller="firm" asp-route-id="@item.Id" class="btn btn-warning text-white col-12"><i class="fa fa-pencil-square-o"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>


